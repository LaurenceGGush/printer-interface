{
  "name": "printer-interface",
  "author": {
    "name": "Laurence Gush"
  },
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "private": true,
  "dependencies": {
    "@chakra-ui/react": "^1.0.0",
    "@chakra-ui/theme-tools": "^1.0.0",
    "@craco/craco": "^5.7.0",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@iconify/icons-mdi": "^1.0.143",
    "deepmerge": "^4.2.2",
    "fast-deep-equal": "^3.1.3",
    "framer-motion": "^3.2.1",
    "jotai": "^0.10.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^3.11.0",
    "react-robot": "^0.2.1",
    "robot3": "^0.2.18",
    "s-ago": "^2.2.0",
    "scheduler": "^0.20.1",
    "use-async-memo": "^1.2.2",
    "uucid": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.1.9",
    "@storybook/addon-essentials": "^6.1.9",
    "@storybook/addon-links": "^6.1.9",
    "@storybook/node-logger": "^6.1.9",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.1.9",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/scheduler": "^0.16.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "prettier": "^2.1.2",
    "react-is": "^17.0.1",
    "react-scripts": "^4.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "web-vitals": "^0.2.4",
    "webpack-bundle-analyzer": "^4.1.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "lint": "eslint ./ --fix",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "craco test --env=node"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier",
      "prettier/react"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "plugins": [
      "simple-import-sort",
      "prettier"
    ],
    "rules": {
      "simple-import-sort/sort": [
        "warn",
        {
          "groups": [
            [
              "^react$"
            ],
            [
              "^\\u0000"
            ],
            [
              "^@?\\w"
            ],
            [
              "^[^.]"
            ],
            [
              "^\\."
            ]
          ]
        }
      ],
      "prettier/prettier": "warn"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!react-robot)"
    ],
    "moduleNameMapper": {
      "src/(.*)$": "<rootDir>/src/$1"
    }
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  }
}
